---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import NewsletterCTA from '../components/NewsletterCTA.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Blog personal sobre programación, diseño y notas" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/naicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Nicolás Arévalo</title>
  </head>
  <body>
    <!-- Ambient Animated Mesh Background -->
    <div class="ambient-background">
      <div class="blob blob-1"></div>
      <div class="blob blob-2"></div>
      <div class="blob blob-3"></div>
      <div class="mesh-overlay"></div>
    </div>

    <div class="page-wrapper">
      <Navbar />
      
      <main>
        <slot />
      </main>
      
      <NewsletterCTA />
      <Footer />
    </div>

    <script>
      // Global click ripple effect for non-interactive elements
      document.addEventListener('mousedown', (e) => {
        // Prevent if clicking on interactive elements or the Navbar area
        if (e.target.closest('a, button, input, textarea, select, summary, details, nav, .navbar, header')) return;

        // Create the ripple element
        const ripple = document.createElement('div');
        ripple.className = 'global-click-ripple';
        
        // Position it at the cursor's coordinates (viewport)
        ripple.style.left = `${e.clientX}px`;
        ripple.style.top = `${e.clientY}px`;

        // Calculate a random direction and distance to shoot towards
        // Distance will be between 50px and 150px
        const distance = 50 + Math.random() * 100;
        const angle = Math.random() * Math.PI * 2; // Random angle in radians
        const tx = Math.cos(angle) * distance;
        const ty = Math.sin(angle) * distance;
        
        // Pass these variables to CSS
        ripple.style.setProperty('--tx', `${tx}px`);
        ripple.style.setProperty('--ty', `${ty}px`);
        
        document.body.appendChild(ripple);
        
        // Remove the element after the animation completes
        ripple.addEventListener('animationend', () => {
          ripple.remove();
        });
      });
    </script>

    <style is:global>
      /* Ambient Background Styles */
      .ambient-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: -1;
        overflow: hidden;
        background-color: var(--bg-color); /* pure black base */
        pointer-events: none;
      }

      .blob {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px); /* Keep soft edges */
        opacity: 0.6; /* Increased global opacity of blobs */
        animation: floatBlob 20s infinite alternate ease-in-out;
      }

      /* Purple / violet blobs for a subtle colorful ambient */
      .blob-1 {
        width: 60vw;
        height: 60vh;
        background: radial-gradient(circle, rgba(147, 51, 234, 0.15) 0%, transparent 70%); 
        top: -10vh;
        left: -10vw;
        animation-delay: 0s;
      }

      .blob-2 {
        width: 50vw;
        height: 50vh;
        background: radial-gradient(circle, rgba(168, 85, 247, 0.12) 0%, transparent 70%);
        bottom: -20vh;
        right: -10vw;
        animation-delay: -5s;
        animation-duration: 25s;
      }

      .blob-3 {
        width: 40vw;
        height: 40vh;
        background: radial-gradient(circle, rgba(216, 180, 254, 0.08) 0%, transparent 70%);
        top: 40vh;
        left: 40vw;
        animation-delay: -10s;
        animation-duration: 30s;
      }

      @keyframes floatBlob {
        0% {
          transform: translate(0, 0) scale(1);
        }
        50% {
          transform: translate(5vw, 5vh) scale(1.1);
        }
        100% {
          transform: translate(-5vw, -5vh) scale(0.9);
        }
      }

      /* Subtle Grid Mesh / Malla */
      .mesh-overlay {
        position: absolute;
        inset: 0;
        background-image: 
          linear-gradient(rgba(255, 255, 255, 0.07) 1px, transparent 1px), /* Increased line opacity */
          linear-gradient(90deg, rgba(255, 255, 255, 0.07) 1px, transparent 1px);
        background-size: 50px 50px; /* Slightly larger grid */
        mask-image: radial-gradient(circle at center, black 40%, transparent 95%); /* Expanded mask radius */
        -webkit-mask-image: radial-gradient(circle at center, black 40%, transparent 95%);
        animation: moveMesh 60s linear infinite;
        opacity: 0.8; /* Increased overarching mesh opacity */
      }

      @keyframes moveMesh {
        0% {
          background-position: 0 0;
        }
        100% {
          background-position: 40px 40px;
        }
      }

      /* Click Animation Styles */
      .global-click-ripple {
        position: fixed;
        width: 150px;
        height: 150px;
        margin-top: -75px; 
        margin-left: -75px;
        border-radius: 50%;
        background: radial-gradient(circle at center, rgba(147, 51, 234, 0.4) 0%, transparent 70%);
        pointer-events: none;
        z-index: 9999;
        transform: scale(0) translate(0, 0);
        opacity: 1;
        animation: shootEffect 0.7s cubic-bezier(0.25, 1, 0.5, 1) forwards;
      }

      @keyframes shootEffect {
        0% {
          transform: scale(0) translate(0, 0);
          opacity: 1;
        }
        70% {
          opacity: 0.8;
        }
        100% {
          /* Scale up slightly while moving along the calculated random vector */
          transform: scale(1.2) translate(var(--tx), var(--ty));
          opacity: 0;
        }
      }
    </style>
  </body>
</html>
