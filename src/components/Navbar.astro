---
import { Image } from 'astro:assets'
import NAicon from './../assets/naiconWhite.svg'
---

<nav class='navbar'>
	<div class='container nav-container'>
		<a href='/' class='logo'>
			<Image src={NAicon} alt='Logo Principal' class='logoPrincipal' />
		</a>

		<input type="checkbox" id="menu-toggle" class="menu-toggle-checkbox">
		<label for="menu-toggle" class="hamburger-menu">
			<span class="bar"></span>
			<span class="bar"></span>
			<span class="bar"></span>
		</label>

		<ul class='nav-links'>
			<li><a href='/'>Notas</a></li>
			<li><a href='/sobre-mi'>Sobre m√≠</a></li>
			<li><a href='/profesional'>Profesional</a></li>
			<li><a href='https://open.spotify.com/show/1gFBa3gI7d9FTKTB6KRY6e?si=mHYJHseYSWmZofb08cdynA' target="_blank" rel="noopener noreferrer">Podcast</a></li>
		</ul>
	</div>
</nav>

<style>
	.navbar {
		padding: 1.5rem 0;
		border-bottom: 1px solid rgba(255, 255, 255, 0.08); /* Thinner subtle gray */
		background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent black */
		backdrop-filter: blur(10px); /* Blur effect to blend content underneath */
		-webkit-backdrop-filter: blur(10px); /* Safari support */
		position: sticky;
		top: 0;
		z-index: 1000; /* Ensure it stays above other content */
	}
	.logoPrincipal {
		width: 44px;
		height: 44px;
		margin: -10px 0;
	}
	.nav-container {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo {
		display: flex;
		align-items: center;
		color: var(--text-primary);
	}

	.nav-links {
		list-style: none;
		display: flex;
		gap: 1.5rem;
	}

	.nav-links a {
		color: var(--text-secondary);
		font-size: 0.9rem;
		font-weight: 400; /* Thinner */
	}

	.nav-links a:hover {
		color: var(--text-primary);
		text-shadow: none; /* No purple shadow on navbar, keep it clean */
	}

	/* Hamburger Menu Hidden by default on desktop */
	.menu-toggle-checkbox {
		display: none !important;
	}

	.hamburger-menu {
		display: none;
		flex-direction: column;
		justify-content: space-between;
		width: 24px;
		height: 18px;
		cursor: pointer;
		z-index: 1001; /* Above the mobile menu */
	}

	.hamburger-menu .bar {
		display: block;
		height: 2px;
		width: 100%;
		background-color: var(--text-primary);
		border-radius: 2px;
		transition: all 0.3s ease-in-out;
	}

	/* Responsive touches */
	@media (max-width: 768px) {
		.hamburger-menu {
			display: flex !important;
		}

		.nav-links {
			display: flex;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			flex-direction: column;
			background-color: rgba(0, 0, 0, 0.95);
			backdrop-filter: blur(15px);
			-webkit-backdrop-filter: blur(15px);
			border-bottom: 1px solid rgba(255, 255, 255, 0.08);
			padding: 2rem 1.5rem;
			gap: 2rem;
			align-items: center;
			opacity: 0;
			transform: translateY(-10px);
			pointer-events: none;
			transition: all 0.3s ease;
		}

		.nav-links a {
			font-size: 1.2rem;
		}

		/* Checkbox Hack specific styles to trigger menu open */
		.menu-toggle-checkbox:checked ~ .nav-links {
			opacity: 1;
			transform: translateY(0);
			pointer-events: auto;
		}

		/* Hamburger X animation when checked */
		.menu-toggle-checkbox:checked ~ .hamburger-menu .bar:nth-child(1) {
			transform: translateY(8px) rotate(45deg);
		}
		.menu-toggle-checkbox:checked ~ .hamburger-menu .bar:nth-child(2) {
			opacity: 0;
		}
		.menu-toggle-checkbox:checked ~ .hamburger-menu .bar:nth-child(3) {
			transform: translateY(-8px) rotate(-45deg);
		}
	}
</style>
