<style>
  .navbar {
    padding: 1.5rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08); /* Thinner subtle gray */
    background-color: var(--bg-color);
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 600; /* Thinner */
    letter-spacing: -0.05em;
    color: var(--text-primary);
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    color: var(--text-secondary);
    font-size: 0.9rem;
    font-weight: 400; /* Thinner */
  }

  .nav-links a:hover {
    color: var(--text-primary);
    text-shadow: none; /* No purple shadow on navbar, keep it clean */
  }

  /* Responsive touches */
  @media (max-width: 600px) {
    .nav-links {
      gap: 1rem;
    }
  }
</style>
