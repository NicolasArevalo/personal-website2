---
import { Image } from 'astro:assets'
import NAicon from './../assets/naiconWhite.svg'
---

<nav class='navbar'>
	<div class='container nav-container'>
		<a href='/' class='logo'>
			<Image src={NAicon} alt='Logo Principal' class='logoPrincipal' />
		</a>
		<ul class='nav-links'>
			<li><a href='/'>Notas</a></li>
			<li><a href='/sobre-mi'>Sobre m√≠</a></li>
			<li><a href='/profesional'>Profesional</a></li>
			<li><a href='https://open.spotify.com/show/1gFBa3gI7d9FTKTB6KRY6e?si=mHYJHseYSWmZofb08cdynA'>Podcast</a></li>
		</ul>
	</div>
</nav>

<style>
	.navbar {
		padding: 1.5rem 0;
		border-bottom: 1px solid rgba(255, 255, 255, 0.08); /* Thinner subtle gray */
		background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent black */
		backdrop-filter: blur(10px); /* Blur effect to blend content underneath */
		-webkit-backdrop-filter: blur(10px); /* Safari support */
		position: sticky;
		top: 0;
		z-index: 1000; /* Ensure it stays above other content */
	}
	.logoPrincipal {
		width: 44px;
		height: 44px;
		margin: -10px 0;
	}
	.nav-container {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo {
		display: flex;
		align-items: center;
		color: var(--text-primary);
	}

	.nav-links {
		list-style: none;
		display: flex;
		gap: 1.5rem;
	}

	.nav-links a {
		color: var(--text-secondary);
		font-size: 0.9rem;
		font-weight: 400; /* Thinner */
	}

	.nav-links a:hover {
		color: var(--text-primary);
		text-shadow: none; /* No purple shadow on navbar, keep it clean */
	}

	/* Responsive touches */
	@media (max-width: 600px) {
		.nav-links {
			gap: 1rem;
		}
	}
</style>
