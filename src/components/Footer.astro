---
import { Image } from 'astro:assets'
import NAicon from './../assets/naiconWhite.svg'
---

<footer class='footer'>
	<div class='container footer-container'>
		<div class='footer-info'>
			<p class='copyright'>
				&copy; {new Date().getFullYear()} Nicolás Arévalo. Todos los derechos reservados.
			</p>
		</div>
		<div>
			<Image src={NAicon} alt='Logo Principal' class='logoPrincipal' />
		</div>
		<div class='footer-links'>
			<a
				href='https://www.instagram.com/_niiico28/'
				target='_blank'
				rel='noopener noreferrer'>Instagram</a
			>
			<a
				href='https://github.com/NicolasArevalo'
				target='_blank'
				rel='noopener noreferrer'>GitHub</a
			>
			<a
				href='https://www.linkedin.com/in/nicolás-arévalo-842839188/'
				target='_blank'
				rel='noopener noreferrer'>LinkedIn</a
			>
			<a href='mailto:inag.458@gmail.com'>Por correo?</a>
		</div>
	</div>
</footer>

<style>
	.footer {
		padding: 3rem 0;
		border-top: 1px solid var(--border-color);
		margin-top: auto;
	}
	.logoPrincipal {
		width: 50px;
		height: 50px;
	}

	.footer-container {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		flex-wrap: wrap;
		gap: 0.4rem;
	}

	.copyright {
		color: var(--text-tertiary);
		font-size: 0.85rem;
		margin: 0;
	}

	.footer-links {
		display: flex;
		gap: 1.5rem;
		flex-wrap: wrap;
	}

	.footer-links a {
		color: var(--text-secondary);
		font-size: 0.85rem;
	}

	.footer-links a:hover {
		color: var(--text-primary);
	}

	@media (max-width: 600px) {
		.footer-container {
			flex-direction: column;
			align-items: center;
			text-align: center;
		}

		.footer-links {
			justify-content: center;
		}
	}
</style>
