---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get and sort posts
const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Format Date as uppercase Spanish
const formatDate = (date) => {
  return date.toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
  }).toUpperCase();
};
---

<BaseLayout title="Inicio">
  <div class="container hero">
    <h1>Notas y pensamientos</h1>
    <p class="subtitle">Un espacio para compartir esas ideas sueltas que retumban en mi cabeza y la única forma de detenerlas es dejarlas salir.</p>
  </div>

  <div class="container overview-container">
    <h3 class="section-label">EXPLORACIÓN RÁPIDA</h3>
    
    <div class="bento-grid">
      {sortedPosts.slice(0, 6).map((post, index) => (
        <a href={`/blog/${post.slug}`} class={`bento-card ${index % 3 === 0 ? 'wide' : ''}`}>
          <div class="bento-content">
            <time>{formatDate(post.data.date)}</time>
            <h4>{post.data.title}</h4>
          </div>
          <div class="bento-hover-layer"></div>
        </a>
      ))}
      <a href="#todas-las-entradas" class="bento-card bento-more">
        <div class="bento-content centered">
          <span class="plus-icon">+</span>
          <h4>Ver más</h4>
        </div>
        <div class="bento-hover-layer"></div>
      </a>
    </div>

    <div class="scroll-wrapper">
      <p class="scroll-indicator">↓ Desliza para ver más ↓</p>
    </div>
  </div>

  <div class="container feed-container" id="todas-las-entradas">
    <h3 class="section-label">TODAS LAS ENTRADAS</h3>
    <hr class="divider" />

    <div class="notes-list" id="notes-container">
      {sortedPosts.map((post, index) => (
        <article class={`note-card ${index >= 5 ? 'hidden-post' : ''}`}>
          <a href={`/blog/${post.slug}`} class="note-link-wrapper">
            <div class="note-date">
              <time datetime={post.data.date.toISOString()}>
                {formatDate(post.data.date)}
              </time>
            </div>
            <h2>{post.data.title}</h2>
            {post.data.description && <p class="note-excerpt">{post.data.description}</p>}
            <span class="read-more">Leer más &gt;</span>
          </a>
        </article>
      ))}
    </div>

    {sortedPosts.length > 5 && (
      <div class="load-more-container">
        <button id="load-more-btn" class="load-more-button">
          Ver más entradas
        </button>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  .hero {
    margin-bottom: 2rem;
    padding-top: 2rem;
  }
  
  .hero h1 {
    font-size: 3rem;
    letter-spacing: -0.05em;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  
  .subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
  }

  .overview-container {
    margin-bottom: 6rem; /* Big spacing to separate from detailed feed */
  }

  .bento-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .bento-card {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-end; /* Title at the bottom like a poster */
    padding: 1.5rem;
    min-height: 180px;
    flex: 1 1 220px; /* Allows stretching to fill empty gaps automatically */
    background-color: #050505; /* Just barely lighter than pure black */
    border: 1px solid var(--border-color);
    border-radius: 6px;
    overflow: hidden;
  }

  /* Wide cards for variety */
  .bento-card.wide {
    flex: 2 1 350px;
  }

  @media (max-width: 600px) {
    .bento-card.wide {
      flex: 1 1 100%; /* Reset on mobile */
    }
  }

  .scroll-wrapper {
    text-align: center;
    margin-top: 3.5rem;
  }
  
  .scroll-indicator {
    display: inline-block;
    font-size: 0.8rem;
    color: var(--text-tertiary);
    font-family: var(--font-body);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    animation: bounce 2.5s infinite ease-in-out;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
      color: var(--text-tertiary);
    }
    50% {
      transform: translateY(8px);
      color: var(--text-secondary);
    }
  }

  .bento-card time {
    font-size: 0.75rem;
    color: var(--text-tertiary); /* Use gray equivalent to the feed list */
    font-family: var(--font-body);
    margin-bottom: 0.75rem;
    display: block;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .bento-card h4 {
    font-family: var(--font-heading);
    font-size: 1.4rem;
    color: var(--text-primary);
    margin: 0;
    line-height: 1.2;
    z-index: 2;
    position: relative;
    transition: color 0.2s ease, text-shadow 0.2s ease;
  }

  .bento-more {
    text-align: center;
    border: 1px dashed var(--text-tertiary);
    background-color: transparent;
    transition: border-color 0.2s ease;
  }
  
  .bento-more:hover {
    border-style: solid;
  }

  .centered {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
  }

  .plus-icon {
    font-size: 3rem;
    font-weight: 300;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    line-height: 1;
    z-index: 2;
    position: relative;
    transition: color 0.2s ease, text-shadow 0.2s ease;
  }

  .bento-more:hover .plus-icon, .bento-more:hover h4 {
    color: var(--accent-color);
    text-shadow: 0 0 10px rgba(147, 51, 234, 0.4);
  }

  .bento-hover-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, rgba(147, 51, 234, 0.1) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
    pointer-events: none;
  }

  .bento-card.wide h4 {
    font-size: 1.8rem; /* Larger font for wide blocks */
  }

  .bento-card:hover {
    border-color: rgba(147, 51, 234, 0.3);
  }

  .bento-card:hover .bento-hover-layer {
    opacity: 1;
  }

  .bento-card:hover h4 {
    color: var(--accent-color);
    text-shadow: 0 0 10px rgba(147, 51, 234, 0.4);
  }

  .feed-container {
    max-width: 650px;
  }
  
  .section-label {
    font-family: var(--font-body);
    font-size: 0.75rem;
    color: var(--text-tertiary);
    letter-spacing: 0.1em;
    font-weight: 500;
    margin-bottom: 2rem;
    text-transform: uppercase;
  }

  .divider {
    border: none;
    border-top: 1px solid var(--border-color);
    margin-bottom: 3rem;
  }

  .notes-list {
    display: flex;
    flex-direction: column;
  }

  .note-card {
    padding-bottom: 3rem;
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--border-color);
  }

  .note-card:last-child {
    border-bottom: none;
    margin-bottom: 0;
  }

  .note-link-wrapper {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: none;
    text-shadow: none;
  }
  
  .note-link-wrapper:hover {
    color: inherit;
    text-shadow: none;
  }

  .note-date {
    font-family: var(--font-body);
    font-size: 0.8rem;
    color: var(--text-tertiary); /* Gray date to not stand out */
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
    transition: color 0.2s ease;
  }

  .note-card h2 {
    font-size: 2.2rem;
    margin-bottom: 1rem;
    font-weight: 400;
    letter-spacing: -0.02em;
    color: var(--text-primary);
    transition: color 0.2s ease, text-shadow 0.2s ease;
  }

  .note-excerpt {
    color: var(--text-secondary);
    font-size: 1.05rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-weight: 400;
    transition: color 0.2s ease;
  }

  .read-more {
    font-family: var(--font-body);
    font-size: 0.95rem;
    color: var(--text-tertiary);
    transition: color 0.2s ease, text-shadow 0.2s ease;
  }

  /* GROUP HOVER EFFECT */
  .note-link-wrapper:hover h2,
  .note-link-wrapper:hover .read-more {
    color: var(--accent-color);
    text-shadow: 0 0 10px rgba(147, 51, 234, 0.4);
  }

  .hidden-post {
    display: none;
  }

  .load-more-container {
    display: flex;
    justify-content: center;
    margin-top: 1rem;
    padding-bottom: 2rem;
  }

  .load-more-button {
    background-color: var(--border-color); /* subtle background */
    color: var(--text-primary);
    border: 1px solid var(--border-color);
    padding: 0.6rem 1.5rem;
    border-radius: 50px; /* round like a pill */
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    font-family: var(--font-body);
    transition: background-color 0.2s, color 0.2s, box-shadow 0.2s, border-color 0.2s;
  }

  .load-more-button:hover {
    background-color: var(--text-primary);
    color: var(--bg-color);
    border-color: var(--text-primary);
    box-shadow: 0 4px 15px rgba(147, 51, 234, 0.2);
  }
  
  .load-more-button:active {
    transform: scale(0.98);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const loadMoreBtn = document.getElementById('load-more-btn');
    if (loadMoreBtn) {
      loadMoreBtn.addEventListener('click', () => {
        const hiddenPosts = Array.from(document.querySelectorAll('.hidden-post'));
        if (hiddenPosts.length > 0) {
          hiddenPosts.slice(0, 5).forEach(post => {
            post.classList.remove('hidden-post');
            // Adding a tiny animation feeling by letting standard CSS handle rendering
          });
          
          if (hiddenPosts.length <= 5) {
            loadMoreBtn.style.display = 'none';
          }
        }
      });
    }
  });
</script>
