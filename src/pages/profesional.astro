<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Select the certification badges
    const badges = document.querySelectorAll('.badge');
    const alert = document.getElementById('prof-alert');

    if (alert && badges.length > 0) {
      badges.forEach(badge => {
        badge.addEventListener('click', (e) => {
          e.preventDefault(); // Prevent navigating to the PDF
          
          // Ensure element is displayed before animating
          alert.style.display = 'flex';
          
          // Force reflow
          alert.offsetHeight; 
          
          // Show alert
          alert.classList.add('show-alert');
          
          // Hide after 3 seconds
          setTimeout(() => {
            alert.classList.remove('show-alert');
            
            setTimeout(() => {
              if(!alert.classList.contains('show-alert')) {
                alert.style.display = 'none';
              }
            }, 400); 
          }, 3000);
        });
      });
    }
  });
</script>

<style>
  .page-header {
    margin-bottom: 4rem;
  }

  .page-header h1 {
    font-size: 3.5rem;
    letter-spacing: -0.02em;
    margin-bottom: 0.5rem;
    font-weight: 500;
    font-family: var(--font-heading);
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
  }

  .prose :global(h2) {
    margin-top: 3rem;
    font-size: 2rem;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    font-weight: 500;
    font-family: var(--font-heading);
  }

  .badges-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.85rem;
    margin-bottom: 4.5rem;
  }

  .badge {
    display: inline-flex;
    align-items: baseline;
    gap: 0.5rem;
    padding: 0.6rem 1.1rem;
    background-color: #080808;
    border: 1px solid var(--border-color);
    border-radius: 50px; /* Pill shape */
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .badge:hover {
    border-color: rgba(147, 51, 234, 0.4);
    background-color: #0c0c0c;
  }

  .badge-title {
    color: var(--text-primary);
    font-size: 0.95rem;
    font-weight: 500;
    transition: color 0.2s ease, text-shadow 0.2s ease;
  }

  .badge-meta {
    color: var(--text-tertiary);
    font-size: 0.75rem;
    font-family: var(--font-body);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .badge:hover .badge-title {
    color: var(--accent-color);
    text-shadow: 0 0 10px rgba(147, 51, 234, 0.4);
  }

  .projects-list {
    list-style-type: none;
    padding: 0;
  }

  .projects-list li {
    margin-bottom: 2rem;
    font-size: 1.15rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  .projects-list strong {
    color: var(--text-primary);
    display: block;
    margin-bottom: 0.5rem; /* Increased spacing */
    font-family: var(--font-heading);
    font-size: 1.6rem; /* Make it read more like a subtitle */
    font-weight: 500;
    letter-spacing: 0.02em; /* Ensure font renders cleanly */
  }

  .portfolio li {
    padding-bottom: 2.5rem; /* Give breathing room between projects */
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 2.5rem;
  }

  .portfolio li:last-child {
    border-bottom: none;
  }

  .tech-stack {
    display: block;
    font-size: 0.9rem;
    color: #c084fc; /* Brighter, more vibrant purple for readability */
    margin-bottom: 1rem; /* More spacing */
    font-family: var(--font-body);
    font-weight: 500;
    letter-spacing: 0.05em;
  }
  
  .links {
    margin-top: 1.25rem;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.25rem;
    color: var(--text-tertiary);
  }

  .links a, .external-link {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s ease, text-shadow 0.2s ease;
  }

  .links a:hover, .external-link:hover {
    color: var(--accent-color);
    text-shadow: 0 0 10px rgba(147, 51, 234, 0.4);
  }

  /* Alert Toast Styles */
  .newsletter-alert {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%) translateY(100px);
    background-color: #000;
    border: 1px solid rgba(147, 51, 234, 0.4);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5), 0 0 20px rgba(147, 51, 234, 0.2);
    padding: 1rem 1.5rem;
    border-radius: 8px;
    align-items: center;
    gap: 0.75rem;
    opacity: 0;
    pointer-events: none;
    transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    z-index: 9999;
  }

  .newsletter-alert.show-alert {
    transform: translateX(-50%) translateY(0);
    opacity: 1;
    pointer-events: auto;
  }

  .alert-icon {
    font-size: 1.25rem;
  }

  .newsletter-alert p {
    margin: 0;
    color: var(--text-primary);
    font-size: 0.95rem;
    font-weight: 500;
  }

  @media (max-width: 500px) {
    .newsletter-alert {
      width: 90%;
      bottom: 1rem;
    }
  }
</style>
