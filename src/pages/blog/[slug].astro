---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { calculateReadingTime } from '../../utils/readingTime';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formatDate = (date) => {
  return date.toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
  }).toUpperCase();
};
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <div class="container article-container">
    <div class="back-link-wrapper">
      <a href="/" class="back-link">&larr; Todas las notas</a>
    </div>

    <header class="article-header">
      <div class="note-meta">
        <time datetime={post.data.date.toISOString()}>
          {formatDate(post.data.date)}
        </time>
        <span class="separator">&bull;</span>
        <span class="reading-time">{calculateReadingTime(post.body).toUpperCase()} DE LECTURA</span>
      </div>
      <h1>{post.data.title}</h1>
    </header>

    <div class="prose">
      <Content />
    </div>
  </div>
</BaseLayout>

<style>
  .article-container {
    max-width: 650px;
    padding-top: 2rem;
  }

  .back-link-wrapper {
    margin-bottom: 4rem;
  }

  .back-link {
    font-family: var(--font-body);
    color: var(--text-tertiary);
    font-size: 0.95rem;
    transition: color 0.2s, text-shadow 0.2s;
  }

  .back-link:hover {
    color: var(--text-primary);
    text-shadow: 0 0 10px rgba(147, 51, 234, 0.2);
  }

  .article-header {
    margin-bottom: 3rem;
  }

  .note-meta {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    font-family: var(--font-body);
    color: var(--text-tertiary);
    font-size: 0.8rem;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
  }

  .separator {
    color: var(--text-tertiary);
    opacity: 0.5;
    font-size: 0.8rem;
  }

  .article-header h1 {
    font-size: 3.5rem;
    font-weight: 500;
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  /* Basic Markdown styling */
  .prose :global(h2) {
    margin-top: 3.5rem;
    font-size: 2rem;
    font-family: var(--font-heading);
    font-weight: 500;
  }

  .prose :global(h3) {
    margin-top: 2.5rem;
    font-size: 1.5rem;
    font-family: var(--font-heading);
    font-weight: 500;
  }

  .prose :global(p) {
    font-size: 1.15rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    color: var(--text-secondary);
  }

  .prose :global(ul), .prose :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    color: var(--text-secondary);
    font-size: 1.15rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(a) {
    color: var(--text-primary);
    text-decoration: underline;
    text-underline-offset: 4px;
    text-decoration-color: var(--border-color);
  }

  .prose :global(a:hover) {
    color: var(--accent-color);
    text-decoration-color: var(--accent-color);
  }
  
  .prose :global(strong), .prose :global(b) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .prose :global(blockquote) {
    border-left: 2px solid var(--border-color);
    padding-left: 1.5rem;
    font-style: italic;
    color: var(--text-tertiary);
    margin: 2.5rem 0;
  }

  .prose :global(code) {
    background-color: var(--border-color);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: monospace;
    font-size: 0.9em;
    color: var(--text-primary);
  }

  .prose :global(pre) {
    background-color: #050505;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 2rem;
    border: 1px solid var(--border-color);
  }

  .prose :global(pre code) {
    background-color: transparent;
    padding: 0;
    color: inherit;
  }
</style>
